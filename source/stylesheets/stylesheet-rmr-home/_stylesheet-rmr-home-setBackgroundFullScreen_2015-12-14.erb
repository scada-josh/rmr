html,body{height:100%;}

#main-container {
    height:100%;
}

#main-container {
    display:table;
    width:100%;
    height:100%;
    padding:100px 0;
    /*color:#f4f4f4;*/
    background: url(<%= '../' + images_dir + '/rmr/MWA_BG2.jpg' %>) no-repeat bottom center scroll !important;
    background-color:#333333;
    -webkit-background-size:cover;
    -moz-background-size:cover;
    -o-background-size:cover;
    background-size:cover;
}

#main-content {
    width:100%;
    height:100%;
    min-height:100%;
    /*background-color:#990000 !important;*/
    background:rgba(0,0,0,0.1) !important;
    padding:10px;
    color:#efefef;
}

@media(min-width:767px) {
    #main-container {
        height:100%;
        padding:0;
    }
}


