.login-section {
    display:table;
    width:100%;
    height:100%;
    padding:100px 0;
    /*color:#f4f4f4;*/
    background: url(<%= '../' + images_dir + '/images-flaty_theme/img/rmr/intro-bg.jpg' %>) no-repeat bottom center scroll;
    background-color:#333333;
    -webkit-background-size:cover;
    -moz-background-size:cover;
    -o-background-size:cover;
    background-size:cover;
}

.login-body{
    display:table-cell;
    vertical-align:middle;
}

@media(min-width:767px) {
    #login-section{
        height:100%;
        padding:0;
    }
}