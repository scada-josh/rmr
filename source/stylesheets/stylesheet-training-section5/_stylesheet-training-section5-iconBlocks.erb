// Icon Blocks

.block-icon-left{
	overflow:auto;

	h1, h2, h3, h4, h5, h6{
		margin:0 0 10px 0;
		padding:0;
		font-size:20px;
	}

	.icon-content{
		float:left;
		width:70%;
	}

	.icon{
		float:left;
		width: 30%;
		margin-top:10px;
	}
}

.who-section{
	width:100%;
	padding:50px 0;
	color:$light;
	background: url(<%= '../' + images_dir + '/images-training-section5/downloads-bg.jpg' %>) no-repeat center center scroll;
	background-color:$dark;
	-webkit-background-size:cover;
	-moz-background-size:cover;
	-o-background-size:cover;
	background-size:cover;
}

@media(min-width:767px) {
	.who-section{
		padding: 100px 0;
	}
}